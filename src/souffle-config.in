CXX=@CXX@
CXXFLAGS="@CXXFLAGS@"
LIBS="@LIBS@"

function usage() {
cat <<EOT
Usage: $0 [-hl]
  -h          Show usage
  -l          Libraries required for linking
EOT
}

while getopts "hl" opt; do
    case $opt in
        h) usage; exit 0 ;;
        l) echo $LIBS; exit 0 ;;
        \?)
            echo "Invalid option: -$OPTARG" >&2
            usage >&2
            exit 1
            ;;
    esac
done

usage >&2
exit 1
