
.number_type N

.decl n( x : N )
.decl m( x : N )

n(1).
n(2).
n(3).

m(4).
m(5).
m(6).

.type pair = [ first : N, second : N ]

.decl p ( p : pair, x: N )
p([x,y], x+y) :- n(x), m(y).

.decl r1 ( x : N, y : N, z:N )
.output r1 ()
r1(z-y,y,z) :- p([_,y], z).

.decl r2 ( x : N, y : N, z:N )
.output r2 ()
r2(z-x,x,z) :- p([x,_], z).

.decl r3 ( z:N )
.output r3 ()
r3(z) :- p([_,_], z).
