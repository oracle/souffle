//// Test-case for string matching

.type String

.decl stringTable (t:String)
.decl substringTable (t:String)
.decl outputData  (sub_str:String, str:String)
.output outputData  ()

outputData(x,y) :- substringTable(x), stringTable(y), contains(x,y).

stringTable("aaaa").
stringTable("abba").
stringTable("bcab").
stringTable("bdab").

substringTable("a").
substringTable("ab").
substringTable("cab").
