.type Integer

.decl succ(a:Integer, b:Integer)
.decl equal(x:Integer, y:Integer, r:Integer)
.output equal()
.decl minimum(x:Integer, y:Integer, r:Integer)
.output minimum()
.decl maximum(x:Integer, y:Integer, r:Integer)
.output maximum()
.decl Is_min_max_eq(r:Integer)
.output Is_min_max_eq()

equal("0", "0", "0").
equal(m, n, r) :- succ(pm, m), succ(pn, n), equal(pm, pn, r).

minimum("1", "0", "1").
minimum("2", "0", "1").
minimum("3", "0", "1").
minimum(m, n, r) :- succ(pm, m), succ(pn, n), minimum(pm, pn, r).

maximum("0", "1", "2").
maximum("0", "2", "2").
maximum("0", "3", "2").
maximum(m, n, r) :- succ(pm, m), succ(pn, n), maximum(pm, pn, r).

Is_min_max_eq(r) :- equal("6", "6", r).
Is_min_max_eq(r) :- minimum("6", "6", r).
Is_min_max_eq(r) :- maximum("6", "6", r).

